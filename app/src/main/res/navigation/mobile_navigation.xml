<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.collegeapp.ui.home.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_notice"
        android:name="com.example.collegeapp.ui.notice.NoticeFragment"
        android:label="notice"
        tools:layout="@layout/fragment_notice" />

    <fragment
        android:id="@+id/navigation_faculty"
        android:name="com.example.collegeapp.ui.faculty.FacultyFragment"
        android:label="faculty"
        tools:layout="@layout/fragment_faculty"/>
    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.example.collegeapp.ui.gallery.GalleryFragment"
        android:label="gallery"
        tools:layout="@layout/fragment_gallery"/>

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.collegeapp.ui.about.about.AboutFragment"
        android:label="about"
        tools:layout="@layout/fragment_about"/>


